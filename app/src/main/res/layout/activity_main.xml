<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnImc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_imc" />


    <Button
        android:id="@+id/btnTmb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_tmb" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="¡Bienvenido a IMCalculadora!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tvIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:scrollHorizontally="false"
        android:gravity="center"
        android:text="En esta aplicación podrás calcular tu IMC y TMB, además de recibir un consejo según tu resultado."
        />


</androidx.appcompat.widget.LinearLayoutCompat>